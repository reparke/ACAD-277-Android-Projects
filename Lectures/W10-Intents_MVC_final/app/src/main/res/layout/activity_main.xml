<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="24dp"
    >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_drink"
        android:text="Drink"
        android:textSize="20sp"/>

    <RadioGroup
        android:id="@+id/group_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_drink"
        android:layout_marginStart="11dp"
        android:orientation="horizontal">
        <RadioButton
            android:text="tea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_tea"/>
        <RadioButton
            android:text="coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_coffee"/>
    </RadioGroup>

    <ToggleButton
        android:id="@+id/toggle_hot_iced"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textOn="hot"
        android:textOff="iced"
        android:layout_below="@+id/text_drink"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/check_rewards"
        android:layout_marginTop="70dp"
        android:text="Purchase" />

    <Switch
        android:text="Cream"
        android:switchPadding="10dp"
        android:textSize="20sp"
        android:id="@+id/switch_cream"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textOff="no"
        android:textOn="yes"
        android:showText="true"
        android:layout_alignBaseline="@+id/toggle_hot_iced"
        android:layout_alignBottom="@+id/toggle_hot_iced"
        android:layout_toEndOf="@+id/button_purchase"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/check_rewards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/toggle_hot_iced"
        android:layout_below="@+id/toggle_hot_iced"
        android:layout_marginTop="8dp"
        android:text="Do you want to join our rewards program?" />

</RelativeLayout>
