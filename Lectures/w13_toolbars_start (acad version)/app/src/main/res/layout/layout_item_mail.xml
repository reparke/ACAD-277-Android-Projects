<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_mail_title"
        tools:text="This is a sample title that is really long."
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/list_mail_sender_prompt"
        android:text="From:"
        android:layout_alignBaseline="@+id/list_mail_title"
        android:layout_toStartOf="@+id/list_mail_sender"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/list_mail_sender"
        tools:text="Karthik"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/list_mail_message"
        tools:text="This is 56 characters for us to compare with and test..."
        android:layout_below="@+id/list_mail_sender"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
